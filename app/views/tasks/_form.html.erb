<h2> <%= action_name %> </h2>

<%= form_with url: url, method: method_variable, model: @task, class: "task-form" do |f|%>
  <p>Please provide the following information to save your task to our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%# f.hidden :creator, value: 'Divya' %>

  <%= f.submit button_title, class: "task-button" %>
<% end %>
