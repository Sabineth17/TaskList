<!-- #Now we are asking CNN to display how we want to view this data  -->

<h1>Tasks</h1>
<ul>
  <% @banana.each do |task|  %>
      <!-- <%= task.name %> By: <%= task.description %> And: <%= task.completion_date %> -->
      <li><%= link_to "#{task.name.upcase}", task_path(task.id) %></li>
      <p> <%= "#{task.description}. To be completed by: #{task.completion_date}" %> </p>
  <% end %>
</ul>


